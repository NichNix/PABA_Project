<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the smooth square -->
    <solid android:color="#FFE9BE" /> <!-- Change the color as needed -->

    <!-- Rounded corners to make the square smooth -->
    <corners android:radius="40dp" /> <!-- Adjust the radius to control how smooth the corners are -->

    <!-- Optional: Add a border to the smooth square -->
    <stroke
        android:width="3dp"
        android:color="#000000" /> <!-- Change the color and width of the border if needed -->

    <!-- Optional: Set the size of the smooth square -->
    <size
        android:width="150dp"
        android:height="150dp" /> <!-- Adjust size to control the square dimensions -->
</shape>